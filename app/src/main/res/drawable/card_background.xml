<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bagian background -->
    <solid android:color="@android:color/white" />

    <!-- Bagian border -->
    <stroke
        android:color="@android:color/darker_gray"
        android:width="1dp" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Shadow (optional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
